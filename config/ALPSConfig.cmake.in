#-----------------------------------------------------------------------------
#
# ALPSConfig.cmake - ALPS CMake configuration file for external projects.
#
# This file is configured by ALPS and used by the UseALPS.cmake module
# to load ALPS's settings for an external project.

# The ALPS root directory.
set(ALPS_ROOT_DIR "@CMAKE_INSTALL_PREFIX@")

# The ALPS include file directories.
set(ALPS_INCLUDE_DIRS "@ALPS_INCLUDE_DIRS_CONFIG@")

# The ALPS library directories.
set(ALPS_LIBRARY_DIRS "@ALPS_LIBRARY_DIRS_CONFIG@")

# The ALPS runtime library directories.  Note that if
# ALPS_CONFIGURATION_TYPES is set (see below) then these directories
# will be the parent directories under which there will be a directory
# of runtime binaries for each configuration type.
set(ALPS_RUNTIME_LIBRARY_DIRS "@ALPS_RUNTIME_LIBRARY_DIRS_CONFIG@")

# The ALPS version number.
SET(ALPS_VERSION_MAJOR "@ALPS_VERSION_MAJOR@")
SET(ALPS_VERSION_MINOR "@ALPS_VERSION_MINOR@")
SET(ALPS_VERSION_PATCH "@ALPS_VERSION_PATCH@")
SET(ALPS_VERSION_BUILD "@ALPS_VERSION_BUILD@")
SET(ALPS_VERSION "@ALPS_VERSION@")

# The location of the UseALPS.cmake file.
set(ALPS_USE_FILE "@ALPS_USE_FILE@")

# The Boost Root Dir used by ALPS
set(ALPS_Boost_ROOT_DIR "@Boost_ROOT_DIR@")
set(ALPS_Boost_INCLUDE_DIR "@Boost_INCLUDE_DIR_CONFIG@")
set(ALPS_Boost_LIBRARIES "@Boost_LIBRARIES@")
set(ALPS_HAS_BOOST_TEST "@ALPS_INSTALL_BOOST_TEST@")
set(ALPS_Boost_UNIT_TEST_FRAMEWORK_LIBRARY "@ALPS_Boost_UNIT_TEST_FRAMEWORK_LIBRARY@")

# ALPS Configuration options.
set(ALPS_BUILD_SHARED_LIBS "@BUILD_SHARED_LIBS@")
set(ALPS_BUILD_TYPE @CMAKE_BUILD_TYPE@)

# OpenMP
set(ALPS_OpenMP_C_FLAGS "@OpenMP_C_FLAGS@")
set(ALPS_OpenMP_CXX_FLAGS "@OpenMP_CXX_FLAGS@")

# MPI
set(ALPS_MPI_FOUND "@MPI_FOUND@")
set(ALPS_MPI_DEFINITIONS "@MPI_DEFINITONS@")
set(ALPS_MPI_INCLUDE_DIR "@MPI_INCLUDE_DIR@")
set(ALPS_MPI_LINKER_FLAGS "@MPI_LINKER_FLAGS@")
set(ALPS_MPI_LIBRARIES "@MPI_LIBRARIES@")
set(ALPS_MPIEXEC "@MPIEXEC@")
set(ALPS_MPIEXEC_NUMPROC_FLAG "@MPIEXEC_NUMPROC_FLAG@")

# BLAS/LAPACK
set(ALPS_LAPACK_FOUND "@LAPACK_FOUND@")
set(ALPS_LAPACK_DEFINITIONS "@LAPACK_DEFINITIONS@")
set(ALPS_LAPACK_LINKER_FLAGS "@LAPACK_LINKER_FLAGS@")
set(ALPS_LAPACK_LIBRARIES "@LAPACK_LIBRARIES@")
set(ALPS_LAPACK_LIBRARY "@LAPACK_LIBRARY@")
set(ALPS_BLAS_LIBRARIES "@BLAS_LIBRARIES@")
set(ALPS_BLAS_LIBRARY "@BLAS_LIBRARY@")
set(ALPS_MKL_INCLUDE_DIR "@MKL_INCLUDE_DIR@")

# Python
set(ALPS_HAVE_PYTHON "@ALPS_HAVE_PYTHON@")
set(ALPS_PYTHON_INTERPRETER "@PYTHON_INTERPRETER@")
set(ALPS_PYTHON_INCLUDE_DIRS "@PYTHON_INCLUDE_DIRS@")
set(ALPS_PYTHON_NUMPY_INCLUDE_DIR "@PYTHON_NUMPY_INCLUDE_DIR@")
set(ALPS_PYTHON_LIBRARY "@PYTHON_LIBRARY@")
set(ALPS_PYTHON_SITE_PKG "@PYTHON_SITE_PKG@")
set(ALPS_PYTHON_EXTRA_LIBS "@PYTHON_EXTRA_LIBS@")
set(ALPS_PYTHON_LINK_FOR_SHARED "@PYTHON_LINK_FOR_SHARED@")

# FFTW
set(ALPS_FFTW_LIBRARIES "@FFTW_LIBRARIES@")
set(ALPS_FFTW_INCLUDE_DIR "@FFTW_INCLUDE_DIR@")
 
# SQLite
set(ALPS_SQLite_FOUND "@SQLite_FOUND@")
set(ALPS_SQLite_INCLUDE_DIR "@SQLite_INCLUDE_DIR@")
set(ALPS_SQLite_LIBRARIES "@SQLite_LIBRARIES@")

# LPSolve
# set(ALPS_LPSolve_FOUND "@LPSolve_FOUND@")
# set(ALPS_LPSolve_INCLUDE_DIR "@LPSolve_INCLUDE_DIR@")
# set(ALPS_LPSolve_LIBRARIES "@LPSolve_LIBRARIES@")

# HDF5
set(ALPS_HDF5_FOUND "@HDF5_FOUND@")
set(ALPS_HDF5_INCLUDE_DIR "@HDF5_INCLUDE_DIR@")
set(ALPS_HDF5_LIBRARIES  "@HDF5_LIBRARIES@")
set(ALPS_HDF5_DIFF_EXECUTABLE "@HDF5_DIFF_EXECUTABLE@")

# Compilers
set(ALPS_CMAKE_C_COMPILER "@CMAKE_C_COMPILER@")
set(ALPS_CMAKE_CXX_COMPILER "@CMAKE_CXX_COMPILER@")
set(ALPS_CMAKE_Fortran_COMPILER "@CMAKE_Fortran_COMPILER@")

# Compiler flags
set(ALPS_CMAKE_C_FLAGS "@CMAKE_C_FLAGS@")
set(ALPS_CMAKE_C_FLAGS_RELEASE "@CMAKE_C_FLAGS_RELEASE@")
set(ALPS_CMAKE_C_FLAGS_DEBUG "@CMAKE_C_FLAGS_DEBUG@")

set(ALPS_CMAKE_CXX_FLAGS "@CMAKE_CXX_FLAGS@")
set(ALPS_CMAKE_CXX_FLAGS_RELEASE "@CMAKE_CXX_FLAGS_RELEASE@")
set(ALPS_CMAKE_CXX_FLAGS_DEBUG "@CMAKE_CXX_FLAGS_DEBUG@")

set(ALPS_CMAKE_Fortran_FLAGS "@CMAKE_Fortran_FLAGS@")
set(ALPS_CMAKE_Fortran_FLAGS_RELEASE "@CMAKE_Fortran_FLAGS_RELEASE@")
set(ALPS_CMAKE_Fortran_FLAGS_DEBUG "@CMAKE_Fortran_FLAGS_DEBUG@")

# Linker flags
set(ALPS_CMAKE_EXE_LINKER_FLAGS "@CMAKE_EXE_LINKER_FLAGS@")
set(ALPS_CMAKE_EXE_LINKER_FLAGS_RELEASE "@CMAKE_EXE_LINKER_FLAGS_RELEASE@")
set(ALPS_CMAKE_EXE_LINKER_FLAGS_DEBUG "@CMAKE_EXE_LINKER_FLAGS_DEBUG@")

set(ALPS_CMAKE_SHARED_LINKER_FLAGS "@CMAKE_SHARED_LINKER_FLAGS@")
set(ALPS_CMAKE_SHARED_LINKER_FLAGS_RELEASE "@CMAKE_SHARED_LINKER_FLAGS_RELEASE@")
set(ALPS_CMAKE_SHARED_LINKER_FLAGS_DEBUG "@CMAKE_SHARED_LINKER_FLAGS_DEBUG@")

# extra header paths and libraries ALPS requries
set(ALPS_EXTRA_DEFINITIONS "@ALPS_EXTRA_DEFINITIONS@")
set(ALPS_EXTRA_INCLUDE_DIRS "@ALPS_EXTRA_INCLUDE_DIRS@")
set(ALPS_EXTRA_LINKER_FLAGS "@ALPS_EXTRA_LINKER_FLAGS@")
set(ALPS_EXTRA_LIBRARIES "@ALPS_EXTRA_LIBRARIES@")
  
# list of ALPS and dependent libraries
set(ALPS_LIBRARIES alps ${ALPS_Boost_LIBRARIES} ${ALPS_EXTRA_LIBRARIES} CACHE STRING "List of ALPS and dependent libraries." FORCE)
set(ALPS_FORTRAN_LIBRARIES alps_fortran CACHE STRING "List of ALPS-Fortran library." FORCE)

