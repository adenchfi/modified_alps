# shell

# path

prefix = @CMAKE_INSTALL_PREFIX@
exec_prefix = @CMAKE_INSTALL_PREFIX@
bindir = @bindir@
datadir = @CMAKE_INSTALL_PREFIX@
datarootdir = @CMAKE_INSTALL_PREFIX@/share
libdir = @libdir@
includedir = @CMAKE_INSTALL_PREFIX@/include
docdir = @CMAKE_INSTALL_PREFIX@/doc

# Makefiles

INCLUDE_MK = $(datadir)/alps/include.mk

# tools

AR = @CMAKE_AR@
RANLIB = @CMAKE_RANLIB@

# base

BASE_CPPFLAGS = @BASE_CPPFLAGS@ @OpenMP_CXX_FLAGS@
BASE_LDFLAGS = @BASE_LDFLAGS@ -Wl,-rpath,$(libdir)
BASE_LIBS = @BASE_LIBS@

# for Boost

BOOST_CPPFLAGS = -I@Boost_INCLUDE_DIR_CONFIG@
BOOST_LDFLAGS = 
BOOST_LIBS = @Boost_LIBS@
#BOOST_SRCDIR = @Boost_ROOT_DIR@

# for MPI

MPI_CPPFLAGS = @MPI_DEFINITIONS@ @MPI_INCLUDE_DIR_FIXED@
MPI_LDFLAGS = @MPI_LINKER_FLAGS@
MPI_LIBS = @MPI_LIBS@
MPIEXEC = @MPIEXEC@

# for LAPACK

LAPACK_CPPFLAGS = @LAPACK_DEFINITIONS@ 
LAPACK_LDFLAGS = @LAPACK_LDFLAGS@
LAPACK_LIBS = @LAPACK_LIBS@

# for HDF5 library

HDF5_CPPFLAGS = -I@HDF5_INCLUDE_DIR@
HDF5_LDFLAGS =
HDF5_LIBS = @HDF5_LIBS@

# for Python library

PYTHON_CPPFLAGS = @PYTHON_CPP_FLAGS@
PYTHON_LDFLAGS = 
PYTHON_LIBS = @PYTHON_LIBRARY@

# for XML parser

XML_CPPFLAGS = 
XML_LDFLAGS = 
XML_LIBS = 

# C/C++ compiler

@CMAKE_C_COMPILER_ENV_VAR@ = @CMAKE_C_COMPILER@
CFLAGS = @CMAKE_C_FLAGS@ @CMAKE_C_FLAGS_RELEASE@

@CMAKE_CXX_COMPILER_ENV_VAR@ = @CMAKE_CXX_COMPILER@
CXXFLAGS = @CMAKE_CXX_FLAGS@ @CMAKE_CXX_FLAGS_RELEASE@

CPPFLAGS = $(BASE_CPPFLAGS) $(XML_CPPFLAGS) $(LAPACK_CPPFLAGS) $(HDF5_CPPFLAGS) $(PYTHON_CPPFLAGS) $(BOOST_CPPFLAGS)  $(MPI_CPPFLAGS) -I$(includedir) 
LDFLAGS = $(BASE_LDFLAGS) $(BOOST_LDFLAGS) -L$(libdir) $(PYTHON_LDFLAGS) $(HDF5_LDFLAGS) $(LAPACK_LDFLAGS) $(XML_LDFLAGS) $(MPI_LDFLAGS)
LIBS = -lalps $(BOOST_LIBS) $(PYTHON_LIBS) $(HDF5_LIBS) $(LAPACK_LIBS) $(XML_LIBS) $(MPI_LIBS) $(BASE_LIBS)
